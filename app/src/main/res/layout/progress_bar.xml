<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/colorBackground"
    android:elevation="6dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/kembali"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lanjut"
        android:layout_alignBottom="@+id/lanjut"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_keyboard_arrow_left"
        android:text="KEMBALI" />

    <Button
        android:id="@+id/lanjut"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:drawableRight="@drawable/ic_keyboard_arrow_right"
        android:text="LANJUT" />

    <Button
        android:id="@+id/simpan"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="SIMPAN" />

    <ImageView
        android:id="@+id/progress_idle_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progress_idle_2"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/progress_idle_2"
        app:srcCompat="@drawable/ic_circle_light_grey" />

    <ImageView
        android:id="@+id/progress_on_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progress_idle_2"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/progress_idle_2"
        app:srcCompat="@drawable/ic_circle" />

    <ImageView
        android:id="@+id/progress_on_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_circle" />

    <ImageView
        android:id="@+id/progress_idle_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_circle_light_grey" />

    <ImageView
        android:id="@+id/progress_on_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progress_idle_2"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/progress_idle_2"
        app:srcCompat="@drawable/ic_circle" />

    <ImageView
        android:id="@+id/progress_idle_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progress_idle_2"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/progress_idle_2"
        app:srcCompat="@drawable/ic_circle_light_grey" />

</RelativeLayout>